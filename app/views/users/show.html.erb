<div class="container">
  <div class="row">

    <div class="col-md-4 col-sm-6">
        <%= image_tag @user.avatar, class: "img-responsive img-rounded" %>
    </div>

    <div class="col-md-8 col-sm-6">
        <ul class="list-unstyled">
          <h1><%= @user.name %></h1>
          <li><strong><%= @user.email %></strong></li>
          <li><%= @user.intro %></li>
        </ul>
        <% if @user.email == current_user.email %>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
    </div>

    <div class="clearfix"></div>
  </div>
</div>

<div class="container">
  <br>
  <h4>30個已評論餐廳</h4>
  <br>
    <% @commented_restaurants.uniq.each do |restaurant| %>
      <div clsaa="my-restaurant">
        <div class="panel panel-default">
          <div class="panel-heading"><%= image_tag restaurant.image, class: "img-responsive center-block" %></div>
          <div class="panel-body">
            <%= restaurant.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
